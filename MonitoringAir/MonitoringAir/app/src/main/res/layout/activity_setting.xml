<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yandi.arduino.monitoringair.SettingActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:text="Setting Ketinggian Air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="48dp"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/activity_setting"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_setting"
        android:layout_marginTop="48dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_setting"
        tools:layout_constraintRight_creator="0" />

    <EditText
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Maksimal"
        android:ems="10"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="189dp"
        android:id="@+id/textMaksimal"
        app:layout_constraintLeft_toLeftOf="@+id/activity_setting"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="56dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_setting"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/activity_setting"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="0"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Minimal"
        android:ems="10"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="246dp"
        android:id="@+id/textMinimal"
        app:layout_constraintLeft_toLeftOf="@+id/activity_setting"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="56dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_setting"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/activity_setting"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="0"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:text="Simpan"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="352dp"
        android:id="@+id/buttonSimpan"
        app:layout_constraintLeft_toLeftOf="@+id/activity_setting"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_setting"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/activity_setting"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/activity_setting"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="0"
        app:layout_constraintVertical_bias="0.78" />

</android.support.constraint.ConstraintLayout>
